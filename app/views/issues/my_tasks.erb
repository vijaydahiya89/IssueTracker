<%= stylesheet_link_tag 'my_style' %>
<%= stylesheet_link_tag 'my_tasks' %>
<div id="my_issues_header">
  <div id="my_issues_title">
    <div class="my_issues_title_left">
      <b>My Tasks</b>
    </div>
    <%= render :partial => "my_panel"%>
  </div>
  <div id="my_issues_title_bottom">
    <a href="/issues/user_issues/<%=current_user.id %>">Show Everyone's Issues</a>
  </div>

</div>
<% if !@tasks.empty? %>
  <h3>Tasks</h3>
  <%= render :partial => "tasks"%>
<%end%>
    <% if !@assigned_by_me.empty? %>
  <h3>Tasks Assigned By Me</h3>
  <%= render :partial => "assigned_by_me"%>
<%end%>
  <br/>