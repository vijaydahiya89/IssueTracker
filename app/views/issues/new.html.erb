
<h3>New issue</h3>

<form action="/issues/create" class="new_issue" enctype="multipart/form-data" id="new_issue" method="post">

  <p>
    <label for="issue_short_description">Summary</label><br />
    <input id="issue_short_description" name="issue[short_description]" size="53" maxlength="50" type="text" />
  </p>
  <p>
    <label for="issue_detailed_description">Detailed description</label><br />
    <textarea cols="40" id="issue_detailed_description" name="issue[detailed_description]" rows="20"></textarea>

  </p>
  <p>
    Assigned To:
    <%  @users = User.all(:order => 'login')%>
    <select name="issue[assigned_to]">
      <% @users.each do |user| %>
        <option value="<%= user.id%>"><%= user.login %></option>
      <% end %>
    </select>
  </p>
  <p>
    Issue Type:
    <select name="issue[issue_type]">
      <option value="Bug">Bug</option>
      <option value="Feature">Feature</option>
    </select>
  </p>
  <p>
    <input id="issue_image" name="issue[image]" size="30" type="file" />
  </p>
  <p>
    <input id="issue_submit" name="commit" type="submit" value="Create" />
  </p>
</form>

<a href="/issues/my_issues/<%= current_user.id %>">Home</a>
<br/><br/>
