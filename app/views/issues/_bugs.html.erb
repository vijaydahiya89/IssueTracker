<table width="735">
<% @open_bugs.each do |bug|
   login = User.find_by_id(bug.assigned_to).login %>
  <tr>
    <td width="585"><a href="/issues/show/<%=h bug.id%>"><%=h bug.short_description[0..70] %></a></td>
     <td width="50">      </td>
    <td width="50"><%=h login %></td>
    <td width="50"><%=h ((Time.now - bug.created_at)/(3600*24)).to_i %> Days</td>
  </tr>
<%end%>

<% @closed_bugs.each do |bug|
   login = User.find_by_id(bug.assigned_to).login %>
  <tr>
    <td width="585"><a href="/issues/show/<%=h bug.id%>"><%=h bug.short_description[0..70] %></a></td>
    <td width="50"><%=h bug.status %></td>
    <td width="50"><%=h login %></td>
    <td width="50"><%=h ((Time.now - bug.created_at)/(3600*24)).to_i %> Days</td>
  </tr>
<%end%>
</table>
<br/>

