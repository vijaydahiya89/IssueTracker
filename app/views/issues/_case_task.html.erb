<%case
when @issue.status =="Open" then%>
  <div id="close_comment">
    <div class="div_button">
      <a href="/issues/update_issue_status/<%= @issue.id %>?status=Done">Done</a>
    </div>
  </div>
<%when @issue.status =="Done"%>
   <div id="close_comment">
    <label>Done</label>
  </div>
<%end%>
